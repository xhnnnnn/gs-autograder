#!/usr/bin/env bash
set -uo pipefail
echo ">>> run_autograder: start"

echo ">>> ensure results dir"
mkdir -p /autograder/results

echo ">>> copy student submission"
cp /autograder/submission/HW08_ProgrammingPart01.R /autograder/source/HW08_ProgrammingPart01.R

cd /autograder/source

echo ">>> run Rscript"
LC_ALL= Rscript grade.R > /autograder/results/log.txt 2>&1 || true

echo ">>> run_autograder: done"
