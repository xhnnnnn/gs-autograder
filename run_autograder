#!/usr/bin/env bash
set -euo pipefail

echo ">>> run_autograder: start"

mkdir -p /autograder/results

cp -f /autograder/source/answers.RDS /autograder/submission/

Rscript /autograder/source/grade.R

if [ -f /autograder/submission/results.json ]; then
  mv /autograder/submission/results.json /autograder/results/results.json
elif [ -f results.json ]; then
  mv results.json /autograder/results/results.json
fi

echo ">>> done"
